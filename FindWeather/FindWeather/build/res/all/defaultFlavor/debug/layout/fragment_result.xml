<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:text="City Name"
        android:id="@+id/textView_cityName"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:padding="10dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView_temp"
        android:layout_alignLeft="@+id/textView_cityName"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/textView_cityName"
        android:layout_alignRight="@+id/textView_cityName" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/imageView_img"
        android:layout_toLeftOf="@+id/textView_temp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textView_cityName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Weather"
        android:layout_alignLeft="@+id/imageView_img"
        android:layout_below="@+id/imageView_img"
        android:layout_alignRight="@+id/imageView_img"
        android:gravity="center"
        />


</RelativeLayout>




