<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.android.app">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="19"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.android.app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_result" android:name="com.android.app.Result" android:parentActivityName="com.android.app.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.android.app.MainActivity"/>
        </activity>
        <activity android:label="@string/title_activity_option" android:name="com.android.app.Option" android:parentActivityName="com.android.app.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.android.app.MainActivity"/>
        </activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>
