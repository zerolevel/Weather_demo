<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <EditText
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_cityName"
        android:layout_gravity="center_vertical"
        android:autoText="true"
        android:hint="@string/hint_main_activity"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp"
        android:textAlignment="center" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonName_activity_main"
        android:id="@+id/button_Go"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="findWeather"
        android:layout_below="@+id/editText_cityName" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView_ProcessUpdates"
        android:gravity="center"
        android:layout_below="@+id/button_Go"
        android:layout_alignLeft="@+id/editText_cityName"
        android:layout_alignStart="@+id/editText_cityName"
        android:layout_marginTop="70dp"
        android:layout_alignRight="@+id/editText_cityName"
        android:layout_alignEnd="@+id/editText_cityName"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        />

</RelativeLayout>
